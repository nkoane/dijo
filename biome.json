{
	"$schema": "https://biomejs.dev/schemas/1.6.4/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"bracketSameLine": true,
			"quoteStyle": "single",
			"semicolons": "always"
		}
	},
	"files": {
		"ignore": [
			"src/components",
			"build",
			".svelte-kit",
			".git",
			".vscode",
			"node_modules",
			"dist",
			"out",
			"coverage",
			"docs",
			"test",
			"tests",
			"tmp",
			"temp"
		]
	}
}
